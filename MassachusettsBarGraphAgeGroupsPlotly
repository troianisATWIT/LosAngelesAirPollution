# CO Poisoning Death Rates per 100k people for Massachusetts

import dash
from dash import dcc, html
import plotly.express as px
import pandas as pd


url = "https://opendata.utah.gov/api/views/hiqz-7rnt/rows.csv?accessType=DOWNLOAD"
df = pd.read_csv(url)
print(df.columns)
print(df.head())
df = df.rename(columns={
    'Year': 'year',
    'Rate per 100k Population': 'rate'
})

app = dash.Dash(__name__)
app.layout = html.Div([
    html.H1("Massachusetts CO Poisoning Death Rate (per 100k)"),
    dcc.Dropdown(
        id='y-axis-type',
        options=[
            {'label': 'Crude rate', 'value': 'rate'},
            {'label': 'Year', 'value': 'year'}
        ],
        value='rate',
        clearable=False
    ),
    dcc.Graph(id='bar-chart'),
    # html.P("") 
])

@app.callback(
    dash.dependencies.Output('bar-chart', 'figure'),
    [dash.dependencies.Input('y-axis-type', 'value')]
)
def update_chart(metric):
    fig = px.bar(
        df,
        x='year',
        y=metric,
        labels={'year': 'Year', metric: 'Deaths per 100k'},
        title="Massachusetts CO Death Rate by Year"
    )
    fig.update_layout(transition_duration=300)
    return fig

if __name__ == '__main__':
    app.run(debug=True)
